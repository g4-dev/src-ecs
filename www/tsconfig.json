{
    "compilerOptions": {
      "baseUrl": "assets",
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "es6",
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "declaration": false,
      "sourceMap": true,
      "noLib": false,
      "strict": true,
      "suppressImplicitAnyIndexErrors": true,
      "target": "es5",
      "paths": {
        "@core": ["assets/core/*"],
        "@admin": ["assets/easyadmin/*"],
        "@fo": ["assets/front_office/*"]
      }
    },
    "types": ["jest"],
    "compileOnSave": true,
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "**/build/", 
      "node_modules", 
      "**/*.spec.ts"
    ]
  }