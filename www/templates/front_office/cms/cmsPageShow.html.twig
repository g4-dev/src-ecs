{% extends 'front_office/layout.html.twig' %}

{% block links %}
    {{ encore_entry_link_tags('cmsShow', null, 'front_office') }}
{% endblock %}

{% block main %}
    <div class="top-page">
        {% include "@fo/partials/category-header.html.twig" with {
            'name': cmsPage.name ,
            'description': cmsPage.description,
            'image':
            { raw: cmsPage.image, obj: cmsPage
        } } %}
    </div>

    {% if layout|default(false) and cmsPage|default(false) %}
        {% include 'front_office/cms/layouts/' ~ layout ~ '.html.twig' with {'cmsPage': cmsPage } %}
    {% endif %}

{% endblock %}

{% block scripts %}
    {{ encore_entry_script_tags('cmsShow', null, 'front_office') }}
{% endblock %}
