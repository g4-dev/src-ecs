{% extends 'front_office/layout.html.twig' %}

{% block links %}
    {{ encore_entry_link_tags('cmsList', null, 'front_office') }}
{% endblock %}

{% block main %}
    {% dump(cmsPages) %}
    {% if  cmsPages.currentPage == 1 %}

        <div class="top-page">
            <div class="green-top-page">
                <h1 class="gel-bold">{{ 'diy.info.title'|trans }}</h1>
                <p class="gel">{{ 'diy.info.desc'|trans }}</p>
            </div>
            <div>
                <img src="{{ asset('images/dechet.png') }}">
            </div>
        </div>
    {% endif %}
    <form class="search-diy">
        <input type="text" class="diy-bar" placeholder="Recherche">
        <input type="submit" class="input-diy pop-bold">
    </form>
    <div class="cont-item">
        {% for cmsPage in cmsPages %}
            <div>
                <div class="cont-item-img">
                    <a href="{{ path('cmsShow',{ slug: cmsPage.slug }) }}"><img src="{{ vich_uploader_asset(cmsPage, 'imageFile') }}" alt="{{ cmsPage.image }}"></a>
                </div>
                <p class="gel-bold">{{ cmsPage.description }}</p>
            </div>
        {% endfor %}
        <div>
            <div class="cont-item-img">
                <a href="#"><img src="{{ asset('images/dechet.png') }}"></a>
            </div>
            <p class="gel-bold">Lorem</p>
        </div>
        <div>
            <div class="cont-item-img">
                <a href="#"><img src="{{ asset('images/dechet.png') }}"></a>
            </div>
            <p class="gel-bold">Lorem</p>
        </div>
        <div>
            <div class="cont-item-img">
                <a href="#"><img src="{{ asset('images/dechet.png') }}"></a>
            </div>
            <p class="gel-bold">Lorem</p>
        </div>
        <div>
            <div class="cont-item-img">
                <a href="#"><img src="{{ asset('images/dechet.png') }}"></a>
            </div>
            <p class="gel-bold">Lorem</p>
        </div>
    </div>
    <a href="{{ path('cmsCategoryList', { slug: categorySlug, page: cmsPages.currentPage + 1}) }}" class="btn btn-voir-plus pop">Voir plus</a>
{% endblock %}

{% block scripts %}
    {{ encore_entry_script_tags('cmsList', null, 'front_office') }}
{% endblock %}