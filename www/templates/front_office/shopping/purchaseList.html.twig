{% extends '@fo/layout.html.twig' %}

{% block links %}
    {{ encore_entry_link_tags('shopping', null, 'front_office') }}
{% endblock %}

{% block main %}

    <header class="mb-4">
        <h1>Mes commandes</h1>
    </header>

    <nav>
        <ul class="nav nav-tabs user-account-tabs">
            <li class="nav-item">
                <a href="{{ path('account') }}" class="nav-link active">Compte</a>
            </li>
            <li class="nav-item">
                <a href="{{ path('accountPurchaseList') }}" class="nav-link active">Commandes</a>
            </li>
        </ul>
    </nav>

    <div class="card">
        <div class="card-body">
            {% if purchases is empty %}
                <p>Pas de commande pour l'instant.</p>
            {% else %}
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Date</th>
                        <th>Statut</th>
                        <th>Total</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for purchase in purchases %}
                        <tr>
                            <td>
                                <a href="{{ path('accountPuchaseShow', { 'id': purchase.id }) }}">{{ purchase.id }}</a>
                            </td>
                            <td>
                                {{ purchase.createdAt|date() }}
                            </td>
                            <td>
                                <div class="badge badge-primary p-2">
                                    {{ purchase.status }}
                                </div>
                            </td>
                            {% if purchase.transaction is defined %}
                                <td>
                                    {{ purchase.transaction.total }} â‚¬
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>

{% endblock %}

{% block scripts %}
    {{ encore_entry_script_tags('shopping', null, 'front_office') }}
{% endblock %}