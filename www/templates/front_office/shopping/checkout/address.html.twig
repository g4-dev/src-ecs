        </nav>
    </div>
</div>
{% endblock breadcrumb %}

{% block main %}
<header class="mb-4">
    <h1>Adresse de livraison</h1>
</header>

{% if address_choice_form|default(false) %}
    {{ form_start(address_choice_form, { 'attr': { 'id': 'addressForm' }}) }}
    {{ form_end(address_choice_form) }}

    <button type="submit" form="addressForm" class="btn btn-primary">{{ 'Continuer'|trans|raw }}</button>
{% else %}
    <a href="{{ path('accountAddress') }}">Ajoutez une addresse</a>
{% endif %}

{% endblock %}
