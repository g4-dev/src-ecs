{% extends 'front_office/layout.html.twig' %}
{% block title %}Tous les produits{% endblock title %}

{% block links %}
    {{ encore_entry_link_tags('productList', null, 'front_office') }}
{% endblock %}

{% block main %}

    <section class="all-products">
        <header class="d-flex flex-column justify-content-center align-items-center my-4">
            <h2>Tous les produits</h2>
            <div class="line"></div>
        </header>
        <div class="row">
            {% for product in products %}
                <div class="col-md-4">
                    <article class="product-card card border-0 mb-4">

                        <div class="image-container">
                            <a href="/product/{{ product.slug }}">
                                <img src="{{ vich_uploader_asset(product, 'imageFile') }}" alt="{{ product.name }}">
                            </a>
                        </div>
                        <div class="card-body pt-0">
                            <h4 class="product-card__heading">
                                <a href="/product/{{ product.slug }}" class="product-card__link">
                                    {{ product.name }}
                                </a>
                            </h4>
                            <div class="divider mb-2"></div>
                            <div class="product-card__price text-right">{{ product.price }} â‚¬</div>
                            <a href="{{ path('basketAdd', {'id': product.id }) }}" class="product-add-basket">Ajouter au panier</a>
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    </section>

{% endblock %}

{% block scripts %}
    {{ encore_entry_script_tags('productList', null, 'front_office') }}
{% endblock %}
